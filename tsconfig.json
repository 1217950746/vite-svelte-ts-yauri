{
    "extends": "@tsconfig/svelte/tsconfig.json",
    "compilerOptions": {
        "target": "es2021",  // 兼容 lang="ts" context="module"
        "useDefineForClassFields": true,
        "module": "esnext",
        "resolveJsonModule": true,
        "baseUrl": ".",
        "allowJs": true,
        "checkJs": true,
        "isolatedModules": true
    },
    "include": [
        "src/**/*.d.ts",
        "src/**/*.ts",
        "src/**/*.js",
        "src/**/*.svelte",
        "vite-env.d.ts",
        "main.ts"
    ],
    "references": [
        {
            "path": "./tsconfig.node.json"
        }
    ]
}
